<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Dienstleistungen_SAP.Pages.UserRegistrationPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:Dienstleistungen_SAP.ViewModel"
    Title="UserRegistrationPage"
    x:DataType="vm:UserRegistrationViewModel">
    <VerticalStackLayout Margin="20" Spacing="20">
        <VerticalStackLayout>
            <Label Text="Email" />
            <Entry Text="{Binding Email}" />
        </VerticalStackLayout>
        <VerticalStackLayout>
            <Label Text="Password" />
            <Entry IsPassword="True" Text="{Binding Password}" />
        </VerticalStackLayout>
        <VerticalStackLayout>
            <Label Text="Password wiederhohlung" />
            <Entry IsPassword="True" Text="{Binding PasswordRepeat}" />
        </VerticalStackLayout>
        <Button
            Command="{Binding RegisterCommand}"
            HorizontalOptions="Start"
            Text="Register" />
    </VerticalStackLayout>
</ContentPage>