<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Dienstleistungen_SAP.Pages.AddServicePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:Dienstleistungen_SAP.ViewModel"
    Title="AddServicePage"
    x:DataType="vm:AddServiceViewModel"
    Shell.FlyoutBehavior="Disabled">
    <VerticalStackLayout Margin="20" Spacing="20">
        <VerticalStackLayout>
            <Label Text="Title" />
            <Entry Text="{Binding Service.Title}" />
        </VerticalStackLayout>
        <VerticalStackLayout>
            <Label Text="Description" />
            <Editor AutoSize="TextChanges" Text="{Binding Service.Description}" />
        </VerticalStackLayout>
        <VerticalStackLayout>
            <Label Text="Plz" />
            <Entry MaxLength="5" Text="{Binding Service.Plz}" />
        </VerticalStackLayout>
        <VerticalStackLayout RadioButtonGroup.GroupName="ServiceType" RadioButtonGroup.SelectedValue="{Binding Service.Type}">
            <RadioButton x:Name="offerRadioButton" Content="Angebot" />
            <RadioButton x:Name="requestRadioButton" Content="Anfrage" />
        </VerticalStackLayout>
        <Button Command="{Binding AddServiceCommand}" Text="Erstellen" />
    </VerticalStackLayout>
</ContentPage>