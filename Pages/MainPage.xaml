<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Dienstleistungen_SAP.Pages.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:models="clr-namespace:Dienstleistungen_SAP.DataModels"
    xmlns:vm="clr-namespace:Dienstleistungen_SAP.ViewModel"
    x:DataType="vm:MainViewModel">

    <VerticalStackLayout Margin="20" Spacing="20">
        <Button Command="{Binding RegisterUserCommand}" Text="Nutzer Register" />
        <Button Command="{Binding LoginUserCommand}" Text="Anmelden" />
        <Button Command="{Binding ServiceOffersCommand}" Text="Service Angebote" />
        <Button Command="{Binding ServiceRequestsCommand}" Text="Service Anfragen" />
        <Button Command="{Binding MyServicesCommand}" Text="Meine Services" />
    </VerticalStackLayout>

</ContentPage>
